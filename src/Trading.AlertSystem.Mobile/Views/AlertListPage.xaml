<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Trading.AlertSystem.Mobile.ViewModels"
             xmlns:models="clr-namespace:Trading.AlertSystem.Mobile.Models"
             x:Class="Trading.AlertSystem.Mobile.Views.AlertListPage"
             x:DataType="vm:AlertListViewModel"
             Title="告警规则">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="添加" Command="{Binding AddRuleCommand}" IconImageSource="add_icon.png"/>
    </ContentPage.ToolbarItems>

    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}">
        <Grid RowDefinitions="*">
            <!-- 错误提示 -->
            <Frame Margin="10"
                   Padding="10"
                   BackgroundColor="#FFE0E0"
                   IsVisible="{Binding HasError}"
                   VerticalOptions="Start"
                   ZIndex="1">
                <Label Text="{Binding ErrorMessage}" TextColor="Red"/>
            </Frame>

            <!-- 规则列表 -->
            <CollectionView ItemsSource="{Binding Rules}" Margin="10">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:PriceMonitorRule">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="删除"
                                               BackgroundColor="Red"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AlertListViewModel}}, Path=DeleteRuleCommand}"
                                               CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame Margin="0,5" Padding="12" BackgroundColor="White" CornerRadius="8">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AlertListViewModel}}, Path=EditRuleCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>

                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                    <!-- 名称和品种 -->
                                    <StackLayout Grid.Row="0" Grid.Column="0">
                                        <Label Text="{Binding Name}"
                                               FontSize="16"
                                               FontAttributes="Bold"/>
                                        <HorizontalStackLayout>
                                            <Label Text="{Binding Symbol}" TextColor="Gray"/>
                                            <Label Text=" | " TextColor="LightGray"/>
                                            <Label Text="{Binding TypeDisplay}" TextColor="Gray"/>
                                        </HorizontalStackLayout>
                                    </StackLayout>

                                    <!-- 状态开关 -->
                                    <Switch Grid.Row="0" Grid.Column="1"
                                            IsToggled="{Binding Enabled}"
                                            VerticalOptions="Center">
                                        <Switch.Behaviors>
                                            <EventToCommandBehavior
                                                EventName="Toggled"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AlertListViewModel}}, Path=ToggleRuleCommand}"
                                                CommandParameter="{Binding .}"/>
                                        </Switch.Behaviors>
                                    </Switch>

                                    <!-- 目标和方向 -->
                                    <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8,0,0">
                                        <Label Text="目标: " TextColor="Gray"/>
                                        <Label Text="{Binding TargetPrice, StringFormat='{0:F2}'}"
                                               IsVisible="{Binding TargetPrice, Converter={StaticResource IsNotNullConverter}}"/>
                                        <Label Text="  " />
                                        <Label Text="{Binding DirectionDisplay}" TextColor="Gray"/>
                                        <Label Text="  |  " TextColor="LightGray"/>
                                        <Label Text="{Binding TimeFrame}" TextColor="Gray"/>
                                    </HorizontalStackLayout>

                                    <!-- 状态 -->
                                    <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,4,0,0">
                                        <Frame Padding="6,2"
                                               BackgroundColor="{Binding StatusColor}"
                                               CornerRadius="4">
                                            <Label Text="{Binding StatusDisplay}"
                                                   TextColor="White"
                                                   FontSize="11"/>
                                        </Frame>
                                        <Button Text="重置触发"
                                                FontSize="11"
                                                Padding="8,2"
                                                Margin="8,0,0,0"
                                                IsVisible="{Binding IsTriggered}"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AlertListViewModel}}, Path=ResetTriggerCommand}"
                                                CommandParameter="{Binding .}"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="暂无告警规则"
                               FontSize="16"
                               TextColor="Gray"
                               HorizontalOptions="Center"/>
                        <Button Text="创建第一个告警"
                                Margin="0,16,0,0"
                                Command="{Binding AddRuleCommand}"/>
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- 加载指示器 -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                               IsVisible="{Binding IsLoading}"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>
        </Grid>
    </RefreshView>
</ContentPage>

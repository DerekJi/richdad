        // åŠ è½½æ‰€æœ‰å‘Šè­¦
        async function loadAlerts() {
            try {
                const response = await fetch(`${API_BASE}/alerts`);
                const alerts = await response.json();

                const alertList = document.getElementById('alertList');

                if (alerts.length === 0) {
                    alertList.innerHTML = `

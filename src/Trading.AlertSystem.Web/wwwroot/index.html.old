                        </div>
                    `;
                    return;
                }

                alertList.innerHTML = alerts.map(alert => createAlertCard(alert)).join('');
            } catch (error) {
                console.error('åŠ è½½å‘Šè­¦å¤±è´¥:', error);
                alert('åŠ è½½å‘Šè­¦å¤±è´¥: ' + error.message);
